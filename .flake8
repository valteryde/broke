[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .ward,
    data,
    scripts/migrate*.py
ignore = 
    E203,
    E501,
    W503,
    E731
max-complexity = 15
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811
