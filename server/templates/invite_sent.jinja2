{% extends "dashboard.jinja2" %}

{% block title %}Invite Sent | Broke{% endblock %}

{% block head %}
    
{% endblock %}

{% block path %}
    <span><i class="ph ph-gear-six"></i> Settings</span>
    <i class="ph ph-caret-right"></i>
    <span><i class="ph ph-users"></i> Team members</span>

    <i class="ph ph-caret-right"></i>
    <span><i class="ph ph-user-plus"></i> Invite token</span>
{% endblock %}

{% block content %}

<h1>Invite token</h1>

<p>Your invite token for {{ name }} has been generated</p>

<div class="token-container" style="background-color: var(--bg-gray); padding: 1rem; border-radius: 8px; margin: 1rem 0; width:fit-content">
    <code style="font-family: monospace; font-size: 1.1rem; word-break: break-all;">{{ base_url }}/welcome/{{ token }}</code>
</div>

<button class="btn btn-primary" style="display:flex;align-items:center;gap:5px;" onclick="window.location.href = '/settings/team'"> <i class="ph ph-arrow-left"></i> Go back</button>

{% endblock %}