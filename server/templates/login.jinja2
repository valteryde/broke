{% extends "standalone.jinja2" %}

{% block title %}Login - Broke{% endblock %}

{% block content %}

<!-- Decorative background elements -->
<div class="standalone-decoration standalone-decoration-1"></div>
<div class="standalone-decoration standalone-decoration-2"></div>

<div class="standalone-card">
    <div class="standalone-card-header">
        <h1>Welcome back</h1>
        <p>Sign in to your account to continue</p>
    </div>
    
    <div class="standalone-card-body">
        <form method="POST" action="/callback?next={{ next_url }}" class="standalone-form">
            <div class="form-group">
                <label for="username">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    class="form-input" 
                    placeholder="Enter your username"
                    autocomplete="username"
                    autofocus
                    required
                >
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-input" 
                    placeholder="Enter your password"
                    autocomplete="current-password"
                    required
                >
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-submit">
                    <i class="ph ph-sign-in"></i>
                    Sign In
                </button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
